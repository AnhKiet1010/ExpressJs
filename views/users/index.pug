extends ../layout/common.pug
block content
	span.mr-4 Users
	a.btn.btn-primary(href="/users/create") Creat
	.d-flex.align-items-center
		form.ml-auto(action="/users/search" ,method="GET", class="d-flex")
			input(type="text",name="q" , class="form-control")
			button(class="btn btn-primary ml-2") Search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Action
				each user in users
					tr
						td
							if !user.avatar
								img(src="images/anime.png",width="50px")
							else
								img(src= user.avatar,width="50px")
						td= user.name
						td= user.phone
						td
							a.btn.btn-light(href="/users/" + user.id ) View