extends ../layout/common.pug
block content
	h1 Products
	.d-flex.align-items-center
		form.ml-auto(action="/users/search" ,method="GET", class="d-flex")
			input(type="text",name="q" , class="form-control")
			button(class="btn btn-primary ml-2") Search
	.d-flex.flex-wrap.flex-direction-space-between
		each product in products
			.card.mr-3.mb-5(style="width: 16rem")
				img.card-img-top(src= product.image)
				.card-body
					h5.card-title Chicken Giblets
					p.card-text= product.description
					a.btn.btn-primary(href="#") Go somewhere